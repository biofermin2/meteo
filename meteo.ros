(defmacro set-readtable (opt &body body)
  "opt:upcase,downcase,preserve,invert"
  `(let ((*readtable* (copy-readtable nil)))
     (setf (readtable-case *readtable*) ,opt)
     ,@body))				; => SET-READTABLE

(defun map-url (n)
  (let ((url-mid "weather_map/data/png/"))
    (format nil "~a~a~a"
	    url-top
	    url-mid
	    (car (set-readtable :preserve
				(last (read-from-string
				       (cond ((eq n 1) (first now-list))
					     ((eq n 2) (second now-list))
					     ((eq n 3) (third now-list))
					     ((eq n 4) (fourth now-list))
					     (t (error "put number 1ã€œ4")))))))))) ; => MAP-URL


(defun download-file (uri &optional (filename))
  (with-open-file (out filename :direction :output
                       :if-exists :supersede
                       :element-type '(unsigned-byte 8))
		  (with-open-stream (input (dex:get uri :want-stream t :connect-timeout nil))
				    (loop :for b := (read-byte input nil -1)
					  :until (minusp b)
					  :do (write-byte b out))))) ; => DOWNLOAD-FILE

(defun map-name (n)
  (let (prefix)
    (setq prefix
	  (cond ((string= n "1") "asia-pacific-mono")
		((string= n "2") "asia-pacific-color")
		((string= n "3") "around-Japan-mono")
		((string= n "4") "around-Japan-color")))
    (format nil "~a-~a~a" prefix (today) ".png"))) ; => MAP-NAME

;; satellite image
(defun center-pt (z)
  (expt 2 (+ z 7)))			; => CENTER-PT

(defun total-px (z)
  (* (center-pt z) 2))			; => TOTAL-PX

(defun px/deg (z)
  (/ (total-px z) 360))			; => PX/DEG

(defun lon->x (lon z)
  (truncate (/ (+ (center-pt z) (* lon (px/deg z)) 0.5) 256))) ; => LON->X

(defun px/rad (z)
  (/ (total-px z) (* 2 pi)))		; => PX/RAD

(defun siny (lat)
  (min (max (sin (* lat (/ pi 180))) -0.9999) 0.9999)) ; => SINY

(defun lat->y (lat z)
  (truncate
   (/ (+ 0.5 (- (center-pt z)
			 (* 0.5 (log (/ (+ 1 (siny lat))
					(- 1 (siny lat))))
			    (px/rad z)))) 256))) ; => LAT->Y


(defun rm-last-char (str)
  (subseq str 0 (1- (length str))))	; => RM-LAST-CHAR

(defun lon/lat (muni)
  (let* ((amedas)
	 (name (rm-last-char muni))
	 (url-mid "amedas/const/")
	 (amedas-data (parse (dex:get (format nil "~a~aamedastable.json" url-top url-mid)))))
    (sets amedas (seek name amedas-data))
    (values (car (getf (read-from-string (car amedas)) 'lon))
	    (car (getf (read-from-string (car amedas)) 'lat))))) ; => LON/LAT

