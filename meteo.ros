;; nowcast image
(defun show-nowcast (muni &optional (z 6))
  "z (ã‚ºãƒ¼ãƒ ãƒ¬ãƒ™ãƒ«) ã¯ 4ï½ž10"
  (multiple-value-bind (lon lat)
      (lon/lat muni)
    (let* ((url-mid "jmatile/data/nowc/")
	   (latest-time
	     (car (parse (dex:get
			  (format nil "~a~a~a" url-top url-mid "targetTimes_N1.json"))
			 :as :alist)))
	   (gsi-url "https://cyberjapandata.gsi.go.jp/xyz/relief/")
	   (x (lon->x lon z))
	   (y (lat->y lat z))
	   (nowcast-layer)
	   (map-layer)
	   (rain-file (format nil "~a~a" (truename "./") "rain.png"))
	   (map-file (format nil "~a~a" (truename "./") "map.png"))
	   (out-file (format nil "nowcast-~a-~a.png" (today) z)))
      (multiple-value-bind (bt vt)
	  (values (aget latest-time "basetime")
		  (aget latest-time "validtime"))
	(setf nowcast-layer (format nil "~a~a~a/none/~a/surf/hrpns/~a/~a/~a.png"
				    url-top url-mid bt vt z x y))
	(setf map-layer (format nil "~a~a/~a/~a.png" gsi-url z x y))
	(download-file nowcast-layer rain-file)
	(download-file map-layer map-file)
	(system (format nil "~a ~a ~a ~a" "composite -compose over" rain-file map-file out-file))
	(system (format nil "xdg-open ~a~a" (truename "./") out-file)))))) ; => SHOW-NOWCAST


